    <script>
        $(document).ready(function() {
            var closeTimer;

            // Show dropdown on hover
            $('.nav-item.dropdown').on('mouseenter', function() {
                clearTimeout(closeTimer);
                var $dropdown = $(this).find('.dropdown-menu');
                $('.dropdown-menu.staff-dropdown').removeClass('show');
                $dropdown.addClass('show');
            });

            // Delay closing when leaving dropdown parent
            $('.nav-item.dropdown').on('mouseleave', function() {
                var $dropdown = $(this).find('.dropdown-menu');
                closeTimer = setTimeout(function() {
                    $dropdown.removeClass('show');
                }, 300);
            });

            // Keep open when hovering over dropdown menu
            $('.dropdown-menu.staff-dropdown').on('mouseenter', function() {
                clearTimeout(closeTimer);
                $(this).addClass('show');
            });

            // Delay closing when leaving dropdown menu
            $('.dropdown-menu.staff-dropdown').on('mouseleave', function() {
                var $dropdown = $(this);
                closeTimer = setTimeout(function() {
                    $dropdown.removeClass('show');
                }, 300);
            });

            // Close dropdown when clicking outside
            $(document).on('click', function(e) {
                if (!$(e.target).closest('.nav-item.dropdown').length) {
                    clearTimeout(closeTimer);
                    $('.dropdown-menu.staff-dropdown').removeClass('show');
                }
            });

            // Toggle on click
            $('.nav-item.dropdown > a').on('click', function(e) {
                e.preventDefault();
                clearTimeout(closeTimer);
                var $dropdown = $(this).next('.dropdown-menu');
                if ($dropdown.hasClass('show')) {
                    $dropdown.removeClass('show');
                } else {
                    $('.dropdown-menu.staff-dropdown').removeClass('show');
                    $dropdown.addClass('show');
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
