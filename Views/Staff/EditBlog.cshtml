@model Exe_Demo.Models.Blog
@{
    ViewData["Title"] = "Chỉnh Sửa Blog";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container-fluid py-5">
    <!-- Page Header -->
    <div class="page-title mb-5">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto">
                    <h2 style="margin: 0; color: white;">
                        <i class="fa fa-edit" style="margin-right: 12px;"></i>Chỉnh Sửa Blog
                    </h2>
                </div>
                <div class="col-auto">
                    <a asp-action="Blogs" class="btn btn-light btn-sm">
                        <i class="fa fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="card border-0">
            <div class="card-body">
                <form asp-action="EditBlog" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="BlogId" value="@Model.BlogId">
                    <input type="hidden" name="AuthorId" value="@Model.AuthorId">
                    <input type="hidden" name="ViewCount" value="@Model.ViewCount">
                    <input type="hidden" name="CreatedDate" value="@Model.CreatedDate">
                    
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group mb-3">
                                <label class="form-label" style="font-weight: 600;">
                                    <i class="fa fa-heading"></i> Tiêu đề <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control" name="Title" id="blogTitle" 
                                       value="@Model.Title" required>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label" style="font-weight: 600;">
                                    <i class="fa fa-link"></i> Slug (URL thân thiện)
                                </label>
                                <input type="text" class="form-control" name="Slug" id="blogSlug" 
                                       value="@Model.Slug" readonly>
                                <small class="text-muted">Tự động tạo từ tiêu đề</small>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label" style="font-weight: 600;">
                                    <i class="fa fa-align-left"></i> Mô tả ngắn
                                </label>
                                <textarea class="form-control" name="ShortDescription" rows="2">@Model.ShortDescription</textarea>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label" style="font-weight: 600;">
                                    <i class="fa fa-file-text"></i> Nội dung <span class="text-danger">*</span>
                                </label>
                                <textarea class="form-control" name="Content" rows="15" required>@Model.Content</textarea>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card" style="position: sticky; top: 20px;">
                                <div class="card-header">
                                    <h6 style="margin-bottom: 0;">
                                        <i class="fa fa-cog"></i> Tùy chọn
                                    </h6>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <div class="mb-3">
                                            <label class="form-label" style="font-weight: 600;">Ảnh hiện tại:</label>
                                            <img src="@Model.ImageUrl" alt="@Model.Title" 
                                                 style="max-width: 100%; border-radius: 4px; margin-bottom: 10px;">
                                        </div>
                                    }

                                    <div class="form-group mb-3">
                                        <label class="form-label" style="font-weight: 600;">
                                            <i class="fa fa-image"></i> Thay đổi ảnh
                                        </label>
                                        <input type="file" class="form-control" name="ImageFile" 
                                               accept="image/*" onchange="previewImage(event)">
                                        <div id="imagePreview" class="mt-2" style="display: none;">
                                            <img id="preview" src="" alt="Preview" 
                                                 style="max-width: 100%; border-radius: 4px;">
                                        </div>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="form-label" style="font-weight: 600;">
                                            <i class="fa fa-link"></i> URL ảnh
                                        </label>
                                        <input type="text" class="form-control" name="ImageUrl" 
                                               value="@Model.ImageUrl">
                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="form-label" style="font-weight: 600;">
                                            <i class="fa fa-user"></i> Tên tác giả
                                        </label>
                                        <input type="text" class="form-control" name="AuthorName" 
                                               value="@Model.AuthorName">
                                    </div>

                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" name="IsPublished" 
                                               id="isPublished" value="true" @(Model.IsPublished == true ? "checked" : "")>
                                        <label class="form-check-label" for="isPublished">
                                            <i class="fa fa-check-circle"></i> Xuất bản
                                        </label>
                                    </div>

                                    <div class="alert alert-info" style="font-size: 13px;">
                                        <strong>Thông tin:</strong><br>
                                        <i class="fa fa-eye"></i> Lượt xem: @Model.ViewCount<br>
                                        <i class="fa fa-calendar"></i> Tạo: @Model.CreatedDate?.ToString("dd/MM/yyyy")
                                    </div>

                                    <hr>

                                    <button type="submit" class="btn btn-primary w-100 mb-2">
                                        <i class="fa fa-save"></i> Lưu thay đổi
                                    </button>
                                    <a asp-action="Blogs" class="btn btn-secondary w-100">
                                        <i class="fa fa-times"></i> Hủy
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto generate slug from title
        $('#blogTitle').on('input', function() {
            var title = $(this).val();
            var slug = generateSlug(title);
            $('#blogSlug').val(slug);
        });

        function generateSlug(text) {
            // Vietnamese characters map
            var from = "àáạảãâầấậẩẫăằắặẳẵèéẹẻẽêềếệểễìíịỉĩòóọỏõôồốộổỗơờớợởỡùúụủũưừứựửữỳýỵỷỹđ";
            var to = "aaaaaaaaaaaaaaaaaeeeeeeeeeeeiiiiiooooooooooooooooouuuuuuuuuuuyyyyyd";
            
            for (var i = 0; i < from.length; i++) {
                text = text.replace(new RegExp(from[i], 'g'), to[i]);
            }
            
            return text.toLowerCase()
                .replace(/[^a-z0-9\s-]/g, '')
                .replace(/\s+/g, '-')
                .replace(/-+/g, '-')
                .replace(/^-+|-+$/g, '');
        }

        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function() {
                $('#preview').attr('src', reader.result);
                $('#imagePreview').show();
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
