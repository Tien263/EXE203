@model Exe_Demo.Controllers.SystemStatusViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>System Status</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { padding: 40px; background: #f8f9fa; }
        .card { box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
    </style>
</head>
<body>
    <div class="container" style="max-width: 800px;">
        <h1 class="mb-4">System Diagnostic Report</h1>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger"><pre>@TempData["Error"]</pre></div>
        }

        <div class="card mb-4">
            <div class="card-header bg-primary text-white">Database Information</div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>Provider:</th>
                        <td>@Model.ProviderName</td>
                    </tr>
                    <tr>
                        <th>Connection String:</th>
                        <td>@Model.ConnectionString</td>
                    </tr>
                    <tr>
                        <th>Connection Status:</th>
                        <td>
                            @if (Model.CanConnect) { <span class="badge bg-success">Connected</span> } 
                            else { <span class="badge bg-danger">Failed</span> }
                        </td>
                    </tr>
                    @if (Model.Error != null)
                    {
                        <tr>
                            <th>Error:</th>
                            <td class="text-danger">@Model.Error</td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        @if (Model.CanConnect)
        {
            <div class="card mb-4">
                <div class="card-header bg-info text-white">Data Statistics</div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>Total Users:</th>
                            <td>@Model.UserCount</td>
                        </tr>
                        <tr>
                            <th>Total Employees:</th>
                            <td>@Model.EmployeeCount</td>
                        </tr>
                        <tr>
                            <th>Total Products:</th>
                            <td>@Model.ProductCount</td>
                        </tr>
                        <tr>
                            <th class="text-primary">Target: staff@mocvistore.com</th>
                            <td><strong>@Model.StaffStatus</strong></td>
                        </tr>
                        <tr>
                            <th>Staff Employee Record:</th>
                            <td>@Model.StaffEmpStatus</td>
                        </tr>
                    </table>
                </div>
            </div>

            <form action="/System/Seed" method="post">
                <button type="submit" class="btn btn-warning btn-lg w-100">
                    ⚠️ Force Run Database Seeder
                </button>
                <p class="text-muted text-center mt-2">Click this if Staff account is missing.</p>
            </form>
        }
        
        <div class="mt-4 text-center">
            <a href="/Auth/Login" class="btn btn-secondary">Back to Login</a>
        </div>
    </div>
</body>
</html>
