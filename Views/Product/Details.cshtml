@model Exe_Demo.Models.Product
@{
    ViewData["Title"] = Model.ProductName;
    var relatedProducts = ViewBag.RelatedProducts as List<Exe_Demo.Models.Product>;
}

@{ await Html.RenderPartialAsync("_PageHero", (Model.ProductName, "Trang chủ", Url.Action("Index", "Home"), "Sản phẩm", Url.Action("Index", "Product"))); }

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5 ftco-animate">
                <a href="@(Model.ImageUrl ?? "/images/prod-6.jpg")" class="image-popup prod-img-bg">
                    <img src="@(Model.ImageUrl ?? "/images/prod-6.jpg")" class="img-fluid" alt="@Model.ProductName">
                </a>
            </div>
            <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                <h3>@Model.ProductName</h3>
                <div class="rating d-flex">
                    <p class="text-left mr-4">
                        <a href="#" class="mr-2">@(Model.Rating ?? 5.0m)</a>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <a href="#"><span class="fa fa-star@(i <= Model.Rating ? "" : "-o")"></span></a>
                        }
                    </p>
                    <p class="text-left mr-4">
                        <a href="#" class="mr-2" style="color: #000;">@(Model.ViewCount ?? 0) <span style="color: #bbb;">Lượt xem</span></a>
                    </p>
                    <p class="text-left">
                        <a href="#" class="mr-2" style="color: #000;">@(Model.SoldCount ?? 0) <span style="color: #bbb;">Đã bán</span></a>
                    </p>
                </div>
                <p class="price">
                    @if (Model.OriginalPrice > Model.Price)
                    {
                        <span class="mr-2" style="text-decoration: line-through; color: #999;">@Model.OriginalPrice.Value.ToString("N0") đ</span>
                    }
                    <span style="color: #82ae46; font-size: 28px; font-weight: 700;">@Model.Price.ToString("N0") đ</span>
                </p>
                <p>@Model.ShortDescription</p>

                <div class="row mt-4">
                    <div class="input-group col-md-6 d-flex mb-3">
                        <span class="input-group-btn mr-2">
                            <button type="button" class="quantity-left-minus btn" data-type="minus">
                                <i class="fa fa-minus"></i>
                            </button>
                        </span>
                        <input type="text" id="quantity" name="quantity" class="quantity form-control input-number" value="1" min="1" max="100">
                        <span class="input-group-btn ml-2">
                            <button type="button" class="quantity-right-plus btn" data-type="plus">
                                <i class="fa fa-plus"></i>
                            </button>
                        </span>
                    </div>
                    <div class="w-100"></div>
                    <div class="col-md-12">
                        <p style="color: #000;"><strong>@(Model.StockQuantity ?? 0)</strong> sản phẩm có sẵn</p>
                        <p style="color: #666;"><i class="fa fa-cube"></i> Khối lượng: <strong>@Model.Weight</strong></p>
                        <p style="color: #666;"><i class="fa fa-tag"></i> Danh mục: <strong>@(Model.Category?.CategoryName ?? "N/A")</strong></p>
                    </div>
                </div>
                
                <form id="addToCartForm" method="post" asp-controller="Cart" asp-action="AddToCart">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <input type="hidden" name="quantity" id="hiddenQuantity" value="1" />
                    <p>
                        <button type="submit" class="btn btn-primary py-3 px-5 mr-2">
                            <i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng
                        </button>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-white btn-outline-white py-3 px-5">
                            <i class="fa fa-arrow-left"></i> Tiếp tục mua
                        </a>
                    </p>
                </form>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-12 nav-link-wrap">
                <div class="nav nav-pills d-flex text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link ftco-animate active mr-lg-1" id="v-pills-1-tab" data-toggle="pill" href="#v-pills-1" role="tab" aria-controls="v-pills-1" aria-selected="true">Mô tả</a>
                    <a class="nav-link ftco-animate mr-lg-1" id="v-pills-2-tab" data-toggle="pill" href="#v-pills-2" role="tab" aria-controls="v-pills-2" aria-selected="false">Thông tin</a>
                    <a class="nav-link ftco-animate" id="v-pills-3-tab" data-toggle="pill" href="#v-pills-3" role="tab" aria-controls="v-pills-3" aria-selected="false">Đánh giá</a>
                </div>
            </div>
            <div class="col-md-12 tab-wrap">
                <div class="tab-content bg-light" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-1" role="tabpanel" aria-labelledby="day-1-tab">
                        <div class="p-4">
                            <h3 class="mb-4">@Model.ProductName</h3>
                            <p style="white-space: pre-wrap;">@Model.Description</p>
                            <ul>
                                <li>Sản phẩm chất lượng cao từ Mộc Châu</li>
                                <li>Không chất bảo quản, an toàn cho sức khỏe</li>
                                <li>Giữ nguyên hương vị tự nhiên</li>
                                <li>Bao bì đẹp, thích hợp làm quà tặng</li>
                            </ul>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="v-pills-2" role="tabpanel" aria-labelledby="v-pills-day-2-tab">
                        <div class="p-4">
                            <h3 class="mb-4">Thông tin sản phẩm</h3>
                            <table class="table">
                                <tr>
                                    <td><strong>Mã sản phẩm:</strong></td>
                                    <td>@Model.ProductCode</td>
                                </tr>
                                <tr>
                                    <td><strong>Danh mục:</strong></td>
                                    <td>@(Model.Category?.CategoryName ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>Khối lượng:</strong></td>
                                    <td>@Model.Weight</td>
                                </tr>
                                <tr>
                                    <td><strong>Đơn vị:</strong></td>
                                    <td>@Model.Unit</td>
                                </tr>
                                <tr>
                                    <td><strong>Tình trạng:</strong></td>
                                    <td><span class="badge badge-success">Còn hàng</span></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                    <div class="tab-pane fade" id="v-pills-3" role="tabpanel" aria-labelledby="v-pills-day-3-tab">
                        <div class="p-4">
                            <h3 class="mb-4">Đánh giá sản phẩm</h3>

                            <!-- Review Summary -->
                            <div class="row mb-4">
                                <div class="col-md-12">
                                    @{
                                        var reviews = Model.Reviews?.OrderByDescending(r => r.CreatedDate).ToList() ?? new List<Exe_Demo.Models.Review>();
                                        var averageRating = reviews.Any() ? Math.Round(reviews.Average(r => r.Rating), 1) : 0;
                                        var totalReviews = reviews.Count;
                                    }
                                    <div class="bg-white p-3 border rounded">
                                        <div class="d-flex align-items-center">
                                            <div class="mr-4 text-center">
                                                <h1 class="display-4 text-primary m-0">@averageRating</h1>
                                                <div class="text-primary">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= Math.Round(averageRating))
                                                        {
                                                            <i class="fas fa-star"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star"></i>
                                                        }
                                                    }
                                                </div>
                                                <small class="text-muted">@totalReviews đánh giá</small>
                                            </div>
                                            
                                            <div class="flex-grow-1">
                                                @if(User.Identity.IsAuthenticated)
                                                {
                                                    <button class="btn btn-primary float-right" type="button" data-toggle="collapse" data-target="#reviewForm">
                                                        <i class="fas fa-pen"></i> Viết đánh giá
                                                    </button>
                                                }
                                                else
                                                {
                                                    <a href="/Auth/Login?returnUrl=@Context.Request.Path" class="btn btn-outline-primary float-right">
                                                        Đăng nhập để đánh giá
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Review Form -->
                            <div class="collapse mb-5" id="reviewForm">
                                <div class="card card-body bg-light border-0">
                                    <form asp-controller="Review" asp-action="AddReview" method="post" enctype="multipart/form-data">
                                        <input type="hidden" name="productId" value="@Model.ProductId" />
                                        <div class="form-group">
                                            <label>Chất lượng sản phẩm:</label>
                                            <div class="rating-select">
                                                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                                    <label class="btn btn-outline-warning active">
                                                        <input type="radio" name="rating" value="5" checked> 5 <i class="fas fa-star"></i>
                                                    </label>
                                                    <label class="btn btn-outline-warning">
                                                        <input type="radio" name="rating" value="4"> 4 <i class="fas fa-star"></i>
                                                    </label>
                                                    <label class="btn btn-outline-warning">
                                                        <input type="radio" name="rating" value="3"> 3 <i class="fas fa-star"></i>
                                                    </label>
                                                    <label class="btn btn-outline-warning">
                                                        <input type="radio" name="rating" value="2"> 2 <i class="fas fa-star"></i>
                                                    </label>
                                                    <label class="btn btn-outline-warning">
                                                        <input type="radio" name="rating" value="1"> 1 <i class="fas fa-star"></i>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <textarea name="comment" class="form-control" rows="3" placeholder="Chia sẻ cảm nhận của bạn về sản phẩm này..." required></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Hình ảnh (Nếu có):</label>
                                            <input type="file" name="reviewImage" class="form-control-file" accept="image/*">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
                                    </form>
                                </div>
                            </div>

                            <!-- Review List -->
                            <div class="review-list">
                                @if (reviews.Any())
                                {
                                    foreach (var review in reviews)
                                    {
                                        <div class="review-item border-bottom pb-3 mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar bg-light rounded-circle d-flex align-items-center justify-content-center mr-3" style="width: 45px; height: 45px;">
                                                        <i class="fas fa-user text-muted"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0 font-weight-bold">@review.CustomerName</h6>
                                                        <small class="text-muted">@review.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</small>
                                                    </div>
                                                </div>
                                                <div class="text-warning">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= review.Rating) { <i class="fas fa-star"></i> }
                                                        else { <i class="far fa-star"></i> }
                                                    }
                                                </div>
                                            </div>
                                            <p class="mb-2">@review.Comment</p>
                                            @if (!string.IsNullOrEmpty(review.MediaUrl))
                                            {
                                                <div class="mt-2">
                                                    <img src="@review.MediaUrl" alt="Review Image" class="img-thumbnail" style="max-height: 150px; cursor: pointer;" onclick="window.open(this.src)" />
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="text-center py-5">
                                        <i class="far fa-comment-dots fa-3x text-muted mb-3"></i>
                                        <p>Chưa có đánh giá nào.</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (relatedProducts != null && relatedProducts.Any())
        {
            <div class="row mt-5">
                <div class="col-md-12">
                    <h3 class="mb-4">Sản phẩm liên quan</h3>
                </div>
            </div>
            <div class="row">
                @foreach (var product in relatedProducts)
                {
                    <div class="col-md-6 col-lg-3 ftco-animate">
                        <div class="product" style="border-radius: 8px; overflow: hidden; box-shadow: 0 5px 15px rgba(0,0,0,0.05); transition: all 0.3s ease; border: 1px solid #eee; background: #fff; margin-bottom: 30px;">
                            <a href="@Url.Action("Details", new { id = product.ProductId })" class="img-prod" style="display: block; position: relative; overflow: hidden;">
                                <img class="img-fluid" src="@(product.ImageUrl ?? "/images/prod-6.jpg")" alt="@product.ProductName" style="width: 100%; height: 250px; object-fit: cover; transition: transform 0.5s ease;">
                                @if (product.IsNew == true)
                                {
                                    <span class="status" style="position: absolute; top: 10px; left: 10px; background: #82ae46; color: #fff; padding: 2px 10px; font-size: 12px; border-radius: 4px; z-index: 10;">Mới</span>
                                }
                                @if (product.OriginalPrice > product.Price && product.OriginalPrice > 0)
                                {
                                    var discount = Math.Round((1 - (product.Price / product.OriginalPrice.Value)) * 100);
                                    <span class="status" style="position: absolute; top: 10px; right: 10px; background: #e74c3c; color: #fff; padding: 2px 10px; font-size: 12px; border-radius: 4px; z-index: 10;">-@discount%</span>
                                }
                            </a>
                            <div class="text py-3 px-3 text-center">
                                <h3><a href="@Url.Action("Details", new { id = product.ProductId })" style="font-weight: 600; font-size: 16px; color: #333; text-decoration: none; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; height: 42px;">@product.ProductName</a></h3>
                                <div class="pricing mb-2">
                                    <p class="price">
                                        @if (product.OriginalPrice > product.Price)
                                        {
                                            <span class="mr-2 price-dc" style="color: #999; text-decoration: line-through; font-size: 14px;">@product.OriginalPrice.Value.ToString("N0") đ</span>
                                        }
                                        <span class="price-sale" style="color: #82ae46; font-size: 18px; font-weight: 700;">@product.Price.ToString("N0") đ</span>
                                    </p>
                                </div>
                                <div class="d-flex align-items-center justify-content-center bottom-area">    
                                   <a href="@Url.Action("Details", new { id = product.ProductId })" class="btn btn-primary btn-sm px-4" style="border-radius: 20px;">Xem Chi Tiết</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function(){
            var quantitiy=0;
            $('.quantity-right-plus').click(function(e){
                e.preventDefault();
                var quantity = parseInt($('#quantity').val());
                $('#quantity').val(quantity + 1);
                $('#hiddenQuantity').val(quantity + 1);
            });

            $('.quantity-left-minus').click(function(e){
                e.preventDefault();
                var quantity = parseInt($('#quantity').val());
                if(quantity>1){
                    $('#quantity').val(quantity - 1);
                    $('#hiddenQuantity').val(quantity - 1);
                }
            });
            
            $('#quantity').on('change', function(){
                $('#hiddenQuantity').val($(this).val());
            });
            
            $('#addToCartForm').on('submit', function(e){
                e.preventDefault();
                
                var isLoggedIn = '@(User.Identity.IsAuthenticated.ToString().ToLower())' === 'true';
                if (!isLoggedIn) {
                    window.location.href = '/Auth/Login';
                    return;
                }

                var form = $(this);
                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    data: form.serialize() + "&isAjax=true",
                    success: function(response) {
                        alert('Đã thêm sản phẩm vào giỏ hàng!');
                        // Reload để cập nhật số lượng giỏ hàng
                        location.reload();
                    },
                    error: function() {
                        alert('Có lỗi xảy ra. Vui lòng thử lại!');
                    }
                });
            });
        });
    </script>
}
