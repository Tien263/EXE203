@model Exe_Demo.Models.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "Sản Phẩm";
}


<style>
    /* Premium Product Card Styles (Copied from Home/Index) */
    .product-card-premium {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        margin-bottom: 30px;
        height: 100%;
        display: flex;
        flex-direction: column;
        border: 1px solid #f0f0f0;
    }

    .product-card-premium:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.12);
        border-color: #d8e2dc;
    }

    .product-img-wrap {
        position: relative;
        overflow: hidden;
        padding-top: 100%; /* 1:1 Aspect Ratio */
        display: block;
    }

    .product-img-wrap img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .product-card-premium:hover .product-img-wrap img {
        transform: scale(1.05);
    }

    .product-content {
        padding: 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
        text-align: left;
    }

    .product-category {
        font-size: 13px;
        color: #888;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .product-title {
        font-family: 'Spectral', serif;
        font-size: 18px; /* Adjusted for grid */
        font-weight: 600;
        margin-bottom: 15px;
        line-height: 1.3;
    }

    .product-title a {
        color: #333;
        text-decoration: none;
        transition: color 0.3s;
    }

    .product-title a:hover {
        color: #4f6a4c;
    }

    .product-price-row {
        margin-top: auto;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

    .current-price {
        font-size: 18px;
        font-weight: 700;
        color: #4f6a4c;
    }

    .old-price {
        font-size: 14px;
        color: #aaa;
        text-decoration: line-through;
        margin-right: 10px;
    }

    .product-actions {
        display: flex;
        gap: 10px;
    }

    .btn-action {
        flex: 1;
        padding: 8px;
        border-radius: 6px;
        font-size: 13px;
        font-weight: 600;
        text-align: center;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
        border: none;
        cursor: pointer;
    }

    .btn-view {
        background: #f8f9fa;
        color: #333;
        border: 1px solid #e0e0e0;
        text-decoration: none !important;
    }

    .btn-view:hover {
        background: #e2e6ea;
        color: #333;
    }

    .btn-buy {
        background: #4f6a4c;
        color: white;
    }

    .btn-buy:hover {
        background: #3d5239;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(79, 106, 76, 0.3);
    }

    .status-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        z-index: 2;
    }

    .status-new {
        background: #4f6a4c;
        color: white;
    }

    .status-sale {
        background: #dc3545;
        color: white;
    }

    /* Sidebar Styles */
    .sidebar-box h3 {
        color: #4f6a4c;
        border-bottom: 2px solid #4f6a4c;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }
    
    .categories li a {
        color: #000;
    }
    
    .categories li a.active,
    .categories li a:hover {
        background: #4f6a4c;
        color: white;
        padding: 5px 12px;
        border-radius: 5px;
        display: inline-block;
    }

    .form-control:focus {
        border-color: #4f6a4c;
        box-shadow: 0 0 0 0.2rem rgba(79, 106, 76, 0.25);
    }
</style>

@{ await Html.RenderPartialAsync("_PageHero", ("Sản Phẩm Hoa Quả Sấy", "Trang chủ", Url.Action("Index", "Home"), "", "")); }

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 sidebar">
                <!-- Categories -->
                <div class="sidebar-box ftco-animate">
                    <h3>Danh Mục</h3>
                    <ul class="categories">
                        <li><a href="@Url.Action("Index")" class="@(Model.CurrentCategory == null ? "active" : "")">Tất cả <span>(@Model.TotalCount)</span></a></li>
                        @if (Model.Categories != null)
                        {
                            foreach (var cat in Model.Categories)
                            {
                                <li><a href="@Url.Action("Index", new { categoryId = cat.CategoryId })" class="@(Model.CurrentCategory == cat.CategoryId ? "active" : "")">@cat.CategoryName</a></li>
                            }
                        }
                    </ul>
                </div>

                <!-- Search -->
                <div class="sidebar-box ftco-animate">
                    <h3>Tìm Kiếm</h3>
                    <form asp-action="Index" method="get" class="search-form">
                        <div class="form-group">
                            <input type="text" name="search" class="form-control" placeholder="Tìm sản phẩm..." value="@Model.CurrentSearch">
                            <button type="submit" class="btn btn-primary mt-2 w-100" style="background:#4f6a4c; border:none;">Tìm Kiếm</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Products -->
            <div class="col-lg-9">
                <!-- Filter & Sort -->
                <div class="row mb-4">
                    <div class="col-md-12 d-flex justify-content-between align-items-center">
                        <p class="text-muted mb-0">Hiển thị @Model.Products.Count() sản phẩm</p>
                        <div class="form-group mb-0">
                            <select class="form-control" id="sortSelect" onchange="location = this.value;" style="min-width: 200px;">
                                <option value="@Url.Action("Index", new { categoryId = Model.CurrentCategory, search = Model.CurrentSearch })">Sắp xếp mặc định</option>
                                <option value="@Url.Action("Index", new { categoryId = Model.CurrentCategory, search = Model.CurrentSearch, sortBy = "price_asc" })" selected="@(Model.CurrentSort == "price_asc" ? "selected" : null)">Giá: Thấp đến Cao</option>
                                <option value="@Url.Action("Index", new { categoryId = Model.CurrentCategory, search = Model.CurrentSearch, sortBy = "price_desc" })" selected="@(Model.CurrentSort == "price_desc" ? "selected" : null)">Giá: Cao đến Thấp</option>
                                <option value="@Url.Action("Index", new { categoryId = Model.CurrentCategory, search = Model.CurrentSearch, sortBy = "name" })" selected="@(Model.CurrentSort == "name" ? "selected" : null)">Tên A-Z</option>
                                <option value="@Url.Action("Index", new { categoryId = Model.CurrentCategory, search = Model.CurrentSearch, sortBy = "newest" })" selected="@(Model.CurrentSort == "newest" ? "selected" : null)">Mới nhất</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Product Grid -->
                @if (Model.Products.Any())
                {
                    <div class="row">
                        @foreach (var product in Model.Products)
                        {
                            <div class="col-sm-6 col-md-4 col-lg-4 mb-4 ftco-animate">
                                <div class="product-card-premium">
                                    <a href="@Url.Action("Details", new { id = product.ProductId })" class="product-img-wrap">
                                        <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/prod-6.jpg" : product.ImageUrl)" alt="@product.ProductName">
                                        @if (product.IsNew == true)
                                        {
                                            <span class="status-badge status-new">Mới</span>
                                        }
                                        else if (product.DiscountPercent > 0)
                                        {
                                            <span class="status-badge status-sale">-@product.DiscountPercent%</span>
                                        }
                                    </a>
                                    <div class="product-content">
                                        <div class="product-category">@product.Category?.CategoryName</div>
                                        <h3 class="product-title">
                                            <a href="@Url.Action("Details", new { id = product.ProductId })">@product.ProductName</a>
                                        </h3>
                                        
                                        <div class="product-price-row">
                                            @if (product.OriginalPrice > product.Price)
                                            {
                                                <span class="old-price">@product.OriginalPrice.Value.ToString("N0") đ</span>
                                            }
                                            <span class="current-price">@product.Price.ToString("N0") đ</span>
                                        </div>

                                        <div class="product-actions">
                                            <a href="@Url.Action("Details", new { id = product.ProductId })" class="btn-action btn-view">
                                                <i class="fa fa-eye"></i> Chi tiết
                                            </a>
                                            <!-- Use same data attributes for Add to Cart script -->
                                            <a href="#" class="btn-action btn-buy btn-add-to-cart" 
                                               data-product-id="@product.ProductId"
                                               data-product-name="@product.ProductName"
                                               data-product-price="@product.Price"
                                               data-product-stock="@product.StockQuantity"
                                               data-product-image="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/prod-6.jpg" : product.ImageUrl)">
                                                <i class="fa fa-shopping-cart"></i> Mua ngay
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center py-5">
                        <i class="fa fa-info-circle fa-2x mb-3"></i><br/>
                        <h4>Không tìm thấy sản phẩm nào.</h4>
                        <p>Vui lòng thử tìm kiếm với từ khóa khác.</p>
                    </div>
                }
            </div>
        </div>
        
        @if (Model.TotalPages > 1)
        {
            <div class="row mt-5">
                <div class="col text-center">
                    <div class="block-27">
                        <ul>
                            @if (Model.PageNumber > 1)
                            {
                                <li><a href="@Url.Action("Index", new { pageNumber = Model.PageNumber - 1, categoryId = Model.CurrentCategory, search = Model.CurrentSearch, sortBy = Model.CurrentSort })">&lt;</a></li>
                            }
                            
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="@(i == Model.PageNumber ? "active" : "")">
                                    <a href="@Url.Action("Index", new { pageNumber = i, categoryId = Model.CurrentCategory, search = Model.CurrentSearch, sortBy = Model.CurrentSort })">@i</a>
                                </li>
                            }
                            
                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li><a href="@Url.Action("Index", new { pageNumber = Model.PageNumber + 1, categoryId = Model.CurrentCategory, search = Model.CurrentSearch, sortBy = Model.CurrentSort })">&gt;</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Include Add to Cart Modal -->
@await Html.PartialAsync("_AddToCartModal")

@section Scripts {
    <script>
        $(document).ready(function(){
            // Xử lý nút "Mua ngay" - Show modal
            $('.btn-add-to-cart').click(function(e){
                e.preventDefault();
                
                var isLoggedIn = '@(User.Identity.IsAuthenticated.ToString().ToLower())' === 'true';
                if (!isLoggedIn) {
                    window.location.href = '/Auth/Login';
                    return;
                }

                var productId = $(this).data('product-id');
                var productName = $(this).data('product-name');
                var productPrice = $(this).data('product-price');
                var productStock = $(this).data('product-stock');
                var productImage = $(this).data('product-image');
                
                showAddToCartModal(productId, productName, productPrice, productStock, productImage);
            });
            
            // Load số lượng giỏ hàng khi trang load
            updateCartCount();
        });
    </script>
}
